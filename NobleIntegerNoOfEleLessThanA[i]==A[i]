import java.util.*;
public class MyClass {
    public static void main(String args[]) {
     Scanner sc=new Scanner(System.in);
     int n=sc.nextInt();
    int a[]=new int[n];
    for(int i=0;i<n;i++){
        a[i]=sc.nextInt();
    }
    Arrays.sort(a);
    int count=0;
    for(int i=0;i<n;i++){
        if(i==a[i]){
            count++;
        }
     }
      System.out.print(count+" ");
      // System.out.print(a[i]+" ");
    }
}