import java.util.*;
public class MyClass {
    public static void main(String args[]) {
     Scanner sc=new Scanner(System.in);
     int n=sc.nextInt();
     int l=0,max=Integer.MIN_VALUE;
    int a[]=new int[n];
    for(int i=0;i<n;i++){
        a[i]=sc.nextInt();
    }
    for(int i=n-1;i>=0;i--){
        if(max<a[i]){
            l++;
            max=a[i];
        }
    }
    System.out.println(l);
   //  System.out.println();
    }
}