import java.util.*;
public class MyClass {
    public static void main(String args[]) {
      Scanner sc=new Scanner(System.in);
     int n=sc.nextInt();
     int count=0;
     while((n&1)!=0 || n!=0){
         if((n&1)==1){
         count++;
     }
     n=n>>1;
     }
     System.out.println(count);
     // System.out.println();
    }
}