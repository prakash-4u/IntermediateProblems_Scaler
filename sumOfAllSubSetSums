import java.util.*;
public class MyClass {
    public static void main(String args[]) {
     Scanner sc=new Scanner(System.in);
     int n=sc.nextInt();
    int a[]=new int[n];
    for(int i=0;i<n;i++){
        a[i]=sc.nextInt();
    }
    int sum=0,t=0;
    for(int i=0;i<n;i++){
        sum+=a[i]*Math.pow(2,n-1);
    }
    System.out.print(sum);
   // System.out.println(sum);
    }
}